<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Window-Black" TargetType="Window">
        <Setter Property="Background">
            <Setter.Value>
                <VisualBrush Visual="{DynamicResource NoiseBackground}" 
                             TileMode="Tile" 
                             Viewport="0,0,71,67" 
                             ViewportUnits="Absolute" 
                             Stretch="None" />
            </Setter.Value>
        </Setter>
    </Style>
        
</ResourceDictionary>